def comap_opens_map {R S : CommRing} (f : R ‚ü∂ S) (U : opens (Spec' R)) :=
  comap f U ((opens.map $ Spec.Top_map f).obj U) (Œª _, id)

lemma to_open_comp_comap' {S : CommRing} (f : R ‚ü∂ S) (U : opens (Spec' R)) :
  to_open R U ‚â´ comap_opens_map f U =
  f ‚â´ to_open S ((opens.map $ Spec.Top_map f).obj U) :=
ring_hom.ext $ Œª r, subtype.eq $ funext $ Œª p,
begin
  unfold comap_opens_map,
  simp_rw [comp_apply, comap_apply, subtype.val_eq_coe],
  erw localization.local_ring_hom_to_map, refl,
end

lemma to_basic_open_comp_comap {S : CommRing} (f : R ‚ü∂ S) (r : R) :
  to_open R (basic_open r) ‚â´ comap_opens_map f (basic_open r) =
  f ‚â´ to_open S (basic_open $ f r) := to_open_comp_comap' R f (basic_open r)


lemma is_localization_iso_comp {M : submonoid R} {S T : CommRing}
  [i : algebra R S] [h : is_localization M S] (f : S ‚âÖ T) :
  @is_localization _ _ M T _ (f.hom.comp i.to_ring_hom).to_algebra :=
{ map_units := let hm := h.1 in
    Œª t, is_unit.map f.hom.to_monoid_hom (hm t),
  surj := let hs := h.2 in Œª t, let ‚ü®‚ü®r,s‚ü©,he‚ü© := hs (f.inv t) in ‚ü®‚ü®r,s‚ü©, by {
    convert congr_arg f.hom he, rw [ring_hom.map_mul, ‚Üêcomp_apply, iso.inv_hom_id], refl}‚ü©,
  eq_iff_exists := let he := h.3 in Œª t t', by { rw ‚Üê he, split,
    apply f.CommRing_iso_to_ring_equiv.injective, exact congr_arg f.hom } }

